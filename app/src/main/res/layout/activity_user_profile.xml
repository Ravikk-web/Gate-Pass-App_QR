<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:background="@drawable/gradient_color_1">\

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#5CC09F">

            <ImageView
                android:id="@+id/imageView_Profile_dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_account_circle"
                />
            <TextView
                android:id="@+id/textView_show_wlcm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_Profile_dp"
                android:hint="loading..."
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">

            <!--            Full name-->
            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/no_profile_pic"/>

            <TextView
                android:id="@+id/textView_show_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_profile"
                android:hint="loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                />
            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_show_full_name"
                android:background="@android:color/darker_gray"
                />

            <!--            Email-->
            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_email"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView_show_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_email"
                android:hint="loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@id/divider_name"
                android:layout_marginTop="20dp"
                />
            <View
                android:id="@+id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_show_email"
                android:background="@android:color/darker_gray"
                />

            <!--            Enrollment Number-->
            <ImageView
                android:id="@+id/ic_enrollno"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_enrollno"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView_show_enrollno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_enrollno"
                android:hint="loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@id/divider_email"
                android:layout_marginTop="20dp"
                />
            <View
                android:id="@+id/divider_enrollno"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_show_enrollno"
                android:background="@android:color/darker_gray"
                />

            <!--            Date of Birth-->
            <ImageView
                android:id="@+id/ic_dob"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_birthday"
                android:layout_below="@id/divider_enrollno"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView_show_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_dob"
                android:hint="loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@id/divider_enrollno"
                android:layout_marginTop="20dp"
                />
            <View
                android:id="@+id/divider_dob"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_show_dob"
                android:background="@android:color/darker_gray"
                />

            <!--            Gender-->
            <ImageView
                android:id="@+id/ic_gender"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_gender"
                android:layout_below="@id/divider_dob"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView_show_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_gender"
                android:hint="loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@id/divider_dob"
                android:layout_marginTop="20dp"
                />
            <View
                android:id="@+id/divider_gender"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_show_gender"
                android:background="@android:color/darker_gray"
                />

            <!--            Mobile-->
            <ImageView
                android:id="@+id/ic_mobile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_mobile"
                android:layout_below="@id/divider_gender"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView_show_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_mobile"
                android:hint="loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@id/divider_gender"
                android:layout_marginTop="20dp"
                />

            <View
                android:id="@+id/divider_mobile"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView_show_mobile"
                android:background="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/textView_UP_message_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_mobile"
                android:text="Parent Details Below.."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                />
            <View
                android:id="@+id/textView_UP_message_divider_parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_UP_message_parent"
                android:background="@android:color/darker_gray"
                />

            <!--            Parent Full name-->
            <ImageView
                android:id="@+id/ic_name_parent"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/no_profile_pic"
                android:layout_below="@id/textView_UP_message_divider_parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView_show_name_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_name_parent"
                android:hint="loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@+id/textView_UP_message_divider_parent"
                android:layout_marginTop="20dp"
                />
            <View
                android:id="@+id/divider_name_parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_show_name_parent"
                android:background="@android:color/darker_gray"
                />

            <!--            Parent Email-->
            <ImageView
                android:id="@+id/ic_email_parent"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_email"
                android:layout_below="@+id/divider_name_parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView_show_email_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_email_parent"
                android:hint="loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@+id/divider_name_parent"
                android:layout_marginTop="20dp"
                />
            <View
                android:id="@+id/divider_email_parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView_show_email_parent"
                android:background="@android:color/darker_gray"
                />

            <!--            Parent Mobile-->
            <ImageView
                android:id="@+id/ic_mobile_parent"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_mobile"
                android:layout_below="@id/divider_email_parent"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView_show_mobile_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_mobile"
                android:hint="loading..."
                android:layout_marginStart="50dp"
                android:textSize="18sp"
                android:layout_below="@id/divider_email_parent"
                android:layout_marginTop="20dp"
                />

            <View
                android:id="@+id/divider_mobile_parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView_show_mobile_parent"
                android:background="@android:color/darker_gray"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:progressBarStyleLarge"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:elevation="10dp"
                android:visibility="gone"
                android:indeterminateTint="#333DFF"
                />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>